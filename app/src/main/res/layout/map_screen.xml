<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:background="#fff"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtvusername"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imvadddirection"
                android:background="@drawable/adddirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <!--EditText
            android:id="@+id/edt"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" /-->


        <Button
            android:background="#760000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btndispatch"
            android:text="Server Instructions"
            android:padding="2dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />




        <Button
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnhiredbutton"
            android:text="Hire Taxi"
            android:padding="2dp"
            android:textSize="20dp"
            android:background="#760000"
            android:layout_width="match_parent"
            android:layout_height="30dp" />



        <Button
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnpostmessage"
            android:text="Add Booking"
            android:padding="2dp"
            android:textSize="20dp"
            android:background="#760000"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnInbox"
            android:background="#760000"
            android:text="Inbox"
            android:padding="2dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:background="#760000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnListAllBookings"
            android:text="All Bookings"
            android:padding="2dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:background="#760000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnsearchgoogle"
            android:text="Search Google Maps"
            android:padding="2dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <Button
            android:background="#760000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btnlogout"
            android:text="Logout"
            android:padding="2dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >

            <fragment
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.85"
                    android:name="com.google.android.gms.maps.MapFragment">


            </fragment>

            <LinearLayout
                android:background="#aa6677cc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15">

                <TextView
                    android:id="@+id/txtvspeeddata"
                    android:text="LatLong"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>